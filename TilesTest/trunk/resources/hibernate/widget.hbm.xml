<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.studerb.model">
	<class name="Widget">

		<id name="id" type="long" length="19" column="widget_id">
			<generator class="identity" />
		</id>
		
		<property column="widget_name" name="widgetName" type="string" length="50" unique="true" update="false" not-null="true"/>
		<property column="initial_time" name="initialTime" type="org.joda.time.contrib.hibernate.PersistentDateTime" not-null="true"/>
		<property column="price" name="price" type="big_decimal" not-null="true"/>
		<property column="price" name="cool" type="boolean" not-null="true" />
  	    <property name="lastUpdate" type="org.joda.time.contrib.hibernate.PersistentDateTime" update="false" insert="false" not-null="true" column="last_update"/>
		

	</class>
</hibernate-mapping>
