<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<view-state id="a" view="login/abcd/a">
		<transition on="submitB" to="b">
			<set name="flashScope.flashMessage"  value="23" />
		</transition>
		<transition on="submitC" to="c">
		</transition>
	</view-state>
	
	<view-state id="b" view="login/abcd/b">
		<transition on="submitC" to="c">
		</transition>
		<transition on="submitD" to="d">
		</transition>
	</view-state>
	
	<view-state id="c" view="login/abcd/c">
		<transition on="submitB" to="b">
		</transition>
		<transition on="submitD" to="d">
		</transition>
	</view-state>
	
	
	<end-state id="d" view="login/abcd/d" />
	
</flow>