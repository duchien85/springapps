<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">


    <var name="webSecurityModel" class="com.arag.client.registration.WebSecurityModel" />

	<view-state id="enterUserNameAndRegId" view="login/resetpasswordverification" model="webSecurityModel" >
		<binder>
			<binding property="username" required="true"/>
			<binding property="registrationId" required="true"/>
		</binder>
		<transition on="continue" to="answerSecurityQuestion" history="discard"/>
	</view-state>
	
	<!-- 
	<decision-state id="checkUser">
		<if test="webSecurityModelValidator.isUserLocked()" then="accountLocked" else="answerSecurityQuestion" />
	</decision-state>
	-->
	
	<view-state id="answerSecurityQuestion" view="login/resetpasswordverificationsecurity" model="webSecurityModel">
		<binder>
			<binding property="answerText" required="true"/>
		</binder>
		<on-entry>
			<evaluate expression="webSecurityFlowAction.fillRandomQAndA(webSecurityModel, flowRequestContext)" />
		</on-entry>
		<transition on="continue" to="enterNewPasswords"  history="discard"/>
	</view-state>

	<view-state id="enterNewPasswords" view="login/resetpasswordverificationnew" model="webSecurityModel">
		<binder>
			<binding property="password" required="true" />
			<binding property="confirmPassword" required="true" />
		</binder>
		<transition on="continue" to="resetPassword" history="invalidate"/>
	</view-state>
	
	<action-state id="resetPassword">
		<evaluate expression="webSecurityFlowAction.resetPassword(webSecurityModel, flowRequestContext)" />
		<transition on="emailSuccess" to="confirmationEmailSuccess" />
		<transition on="emailFailed" to="confirmationEmailFailed" />
	</action-state>
	
	<end-state id="cancel" view="externalRedirect:contextRelative:/login/index.htm" />
	<end-state id="accountLocked" view="externalRedirect:contextRelative:login/accountlocked.htm" />
	<end-state id="confirmationEmailSuccess" view="externalRedirect:contextRelative:/login/resetpasswordverificationconfirmation.htm?emailSent=yes"/>
	<end-state id="confirmationEmailFailed" view="externalRedirect:contextRelative:/login/resetpasswordverificationconfirmation.htm?emailSent=no"/>
	
	<global-transitions>
		<transition on-exception="com.arag.common.exception.AccountLockedException" to="accountLocked" history="invalidate"/>
		<transition on="cancel" to="cancel" history="invalidate" bind="false" />
	</global-transitions>	
	
</flow>