<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.studerb.hr.employee.Department" table="DEPARTMENTS" >
        <id name="id" type="java.lang.Long">
            <column name="DEPARTMENT_ID" />
            <generator class="sequence-identity" >
            	<param name="sequence">DEPARTMENTS_SEQ</param>
            </generator>
        </id>
        <property name="departmentName" type="string">
            <column name="DEPARTMENT_NAME" length="30" not-null="true" />
        </property>
        <many-to-one name="manager" class="com.studerb.hr.employee.Employee" fetch="select">
            <column name="MANAGER_ID" not-null="true" />
        </many-to-one>
        <many-to-one name="location" class="com.studerb.hr.geo.Location" fetch="select">
            <column name="LOCATION_ID" not-null="true"  />
        </many-to-one>
    </class>
</hibernate-mapping>
