<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.studerb.hr.geo.Country" table="COUNTRIES">
        <id name="id" type="string" length="2">
            <column sql-type="char" name="COUNTRY_ID" />
            <generator class="assigned" />
        </id>
        <property name="name" type="string">
            <column name="COUNTRY_NAME" length="40" not-null="false" />
        </property>
        <many-to-one name="region" class="com.studerb.hr.geo.Region" fetch="join">
            <column name="REGION_ID" not-null="true" />
        </many-to-one>
    </class>
</hibernate-mapping>
