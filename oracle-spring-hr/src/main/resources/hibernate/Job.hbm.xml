<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.studerb.hr.employee.Job" table="JOBS"  schema="hr_dev">
        <id name="id" type="string" length="10">
            <column name="JOB_ID"/>
            <generator class="assigned" />
        </id>
        <property name="jobTitle" type="string">
            <column name="COUNTRY_NAME" length="35" not-null="true" />
        </property>
        <property name="minSalary" type="long">
            <column name="MIN_SALARY" not-null="false" />
        </property>
        <property name="maxSalary" type="long">
            <column name="MAX_SALARY" not-null="false" />
        </property>
    </class>
</hibernate-mapping>
